# ===========================================
# VERCEL ENVIRONMENT VARIABLES
# Add these in your Vercel Dashboard:
# Project Settings > Environment Variables
# ===========================================

# Node Environment
NODE_ENV=production

# Backend Port (not used in Vercel, but needed for local dev)
PORT=5000

# MongoDB Connection
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret (use a strong random string in production)
SECRET=your_jwt_secret_here

# Cloudinary Configuration (REQUIRED for Vercel deployment)
# Sign up at https://cloudinary.com to get these credentials
USE_CLOUDINARY=true
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL for CORS (set to your Vercel domain)
# Example: https://your-project.vercel.app
FRONTEND_URL=https://your-vercel-domain.vercel.app

# Frontend Environment Variable
# Note: For frontend, prefix with VITE_
# Set this to your Vercel backend URL or leave empty to use relative URLs
VITE_API_URL=
